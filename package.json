{
  "name": "ts-gql",
  "version": "1.0.0",
  "description": "A simple Node graphql server written in TypeScript",
  "main": "./dist/index.js",
  "author": "Jim Schuster <jim@schusie.net>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "watch": "rm -rf dist && tsc --project tsconfig.production.json --watch",
    "dev": "nodemon dist/index.js",
